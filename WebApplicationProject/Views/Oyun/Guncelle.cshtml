@model Oyun

<form method="post">


    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Oyun Güncelle</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label>Oyun Adı:</label>
            <input asp-for="OyunAdi" class="form-control" />
            <span asp-validation-for="OyunAdi" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Oyun Türü ID:</label>
            <select asp-for="OyunTuruId" asp-items="ViewBag.OyunTuruList" class="form-select">
            </select>
        </div>
        <div class="mb-3">
            <label>Oyun Tanımı:</label>
            <input asp-for="Tanim" class="form-control" />
            <span asp-validation-for="Tanim" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Oyun Yayıncısı:</label>
            <input asp-for="Yayıncı" class="form-control" />
            <span asp-validation-for="Yayıncı" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Oyun Fiyatı:</label>
            <input asp-for="Fiyat" class="form-control" />
            <span asp-validation-for="Fiyat" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Oyun Güncelle</button>
        <a asp-controller="Oyun" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Oyunlara Geri Dön
        </a>

    </div>



</form>
